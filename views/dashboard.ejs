<%- include('partials/header-postauth') %>
<div class="grow overflow-y-scroll -mt-10 sm:mt-0	 ">
  <div class="grid grid-cols-8 gap-4">
    <div class="col-span-8 sm:col-start-2 sm:col-end-8 card bg-base-300 rounded-box place-items-center">
  <h1>DASHBOARD</h1>
  <h2>All User's Stories</h2>
  <ul>
    <% allUserPosts.forEach(post => { %>
    <li><%=post.title%></li>
    <li><%=post.body%></li>
    <li><%=post.postType%></li>
    <button><i class="bi bi-heart-fill"></i> <%=post.heart.length%></button>
    <button>
      <i class="bi bi-heartbreak-fill"></i> <%=post.heartBreak.length%>
    </button>
    <button>
      <a style="color: black; text-decoration: none" href="editButton/<%=post._id%>">Edit</a>
    </button>
    <button class="deletePost" data-DeleteID="<%=post._id%>">Delete</button>
    <br />
    <br />
    <% }) %>
  </ul>
  <h2>User's Story Comments</h2>
  <ul>
    <% postsWithUserComments.forEach(postWithComment => { %>
      <div class="w-24 rounded-full  ">
        <% users.forEach(user => { %>
        <% if(postWithComment.post.loginID.toString() === user.loginID.toString()){%>
        <img src="<%=user.image%>" alt="Avatar Tailwind CSS Component" class="mask mask-hexagon"> <%  } %>
        <% }) %>
    <li><%=postWithComment.post.title%></li>
    <li><%=postWithComment.post.body%></li>
    <li>
      <%=postWithComment.body%><br />

      <button>
        <a style="color: black; text-decoration: none"
          href="../comment/editCommentButton/<%=postWithComment._id%>">Edit</a>
      </button>
      <button class="deleteComment" data-DeleteCommentID="<%=postWithComment._id%>">
        Delete
      </button>
    </li>
    <% }) %>
  </ul>
  <h2>Wall Posts</h2>
  <ul>
    <% wallPosts.forEach(wallPost => { %>
    <a href="/wall/<%= wallPost._id%>">
      <img src="<%=wallPost.image%>" loading="lazy" width="50%" /></a>
    <br /><br />
    <li>
      <%=wallPost.caption%><br />
      <button>
        <i class="bi bi-heart-fill"></i> <%=wallPost.heart.length%>
      </button>
      <button>
        <i class="bi bi-heartbreak-fill"></i> <%=wallPost.heartBreak.length%>
      </button>
      <button class="deleteWallPost" data-DeleteWallPostID="<%=wallPost._id%>">
        Delete</button><br /><br />
    </li>
    <% }) %>
  </ul>


  <h2>Wall Post's User's Story Comments</h2>
  <ul>
    <% wallPostsWithUserComments.forEach(postWithComment => { %>
      <div class="w-24 rounded-full  ">
        <% users.forEach(user => { %>
        <% if(postWithComment.wall.loginID.toString() === user.loginID.toString()){%>
        <img src="<%=user.image%>" alt="Avatar Tailwind CSS Component" class="mask mask-hexagon"> <%  } %>
        <% }) %>

        <a href="/wall/<%= postWithComment.wall._id%>">
          <img src="<%=postWithComment.wall.image%>" loading="lazy" width="50%" /></a>

      <li><%=postWithComment.wall.caption%></li>
    <li>
      <%=postWithComment.captionComment%><br />

      <button>
        <a style="color: black; text-decoration: none"
          href="../wall/editWallPostButton/<%=postWithComment._id%>">Edit</a>
      </button>
      <button class="deleteComment" data-DeleteCommentID="<%=postWithComment._id%>">
        Delete
      </button>
    </li>
    <% }) %>
  </ul>



  </div>
  </div>
</div>
<%- include('partials/footer-postauth') %>