<%- include('partials/header') %>
<h1>Click to Logout</h1>
<a href="/auth/logout">Logout</a><br /><br />

<a href="/loggedinindex">Home</a><br />
<a href="/updatedindex">Make a Post</a>
<h1>All User's Posts</h1>
<ul>
        <% allUserPosts.forEach(post => { %>
        <li><%=post.title%></li>
        <li><%=post.body%></li>
        <li><%=post.postType%></li>
        <li><%=post.heart%></li>
        <li><%=post.heartBreak%></li>
        <td><a href="editButton/<%=post._id%>">Edit</a></td>
        <button class="deletePost" data-DeleteID="<%=post._id%>">Delete</button>
        <br />
        <br />
        <% }) %>
</ul>
<h1>All User's Comments</h1>
<ul>
        <% postsWithUserComments.forEach(postWithComment => { %>
               

                <li><%=postWithComment.post.title%></li>

        <li>
                <%=postWithComment.body%>

                <a href="../comment/editCommentButton/<%=postWithComment._id%>">Edit</a>

                <button class="deleteComment" data-DeleteCommentID="<%=postWithComment._id%>">
                        Delete
                </button>
        </li>

        <% }) %>
</ul>
<%- include('partials/footer') %>