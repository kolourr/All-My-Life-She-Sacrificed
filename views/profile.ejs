<%- include('partials/header-postauth') %>
<div class="grow  -mt-20 sm:mt-0	 ">
  <div class="grid grid-cols-8 gap-4">
    <div class="col-span-8 sm:col-start-2 sm:col-end-8 lg:col-start-3 lg:col-end-7 card bg-base-300 rounded-box place-items-center p-8">




      <% user.forEach(us => { %>
      <h1 class="text-3xl font-bold text-center lg:text-left mb-4">
        <%=us.firstName%>'s Profile
      </h1>
      <div class="bg-base-200 w-10/12 lg:w-7/12 pt-2 rounded-md shadow-md">
        <div class="card bg-base-100 shadow-xl h-full">
          <div class="bg-base-100 grid w-full flex-grow gap-3 rounded-xl rounded-tl-none shadow-xl">
            <div class="flex flex-col items-center space-x-2">
              <div class="avatar">
                <div class="w-24 rounded-full">
                  <img src="<%=us.image%>" alt="Avatar Tailwind CSS Component" class="mask mask-hexagon" />
                </div>
              </div>
              <div class="text-lg text-base-content/70">
                <%=us.firstName%>
              </div>
            </div>
          </div>
          <div class="divider       text-lg text-primary font-extrabold mt-4">
            Item's on File
          </div>
          <div class="bg-base-200 p-6 m-6 rounded-md">
            <div class="grid grid-rows-4">
              <div>
                <div class="flex flex-row">
                  <div class="basis-1/2">First Name</div>
                  <div class="basis-1/2"><%=us.firstName%></div>
                </div>
              </div>
              <div>
                <div class="flex flex-row">
                  <div class="basis-1/2">Last Name</div>
                  <div class="basis-1/2"><%=us.lastName%></div>
                </div>
              </div>
              <div>
                <div class="flex flex-row">
                  <div class="basis-1/2">Full Name</div>
                  <div class="basis-1/2 "><%=us.displayName%></div>
                </div>
              </div>
              <div>
                <div class="flex flex-row">
                  <div class="basis-1/2">Email</div>
                  <div class="basis-1/2 overflow-auto "><%=us.email%></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% }) %>
      <div class="flex flex-row bg-base-200 w-10/12 lg:w-7/12 py-2 rounded-md shadow-md mb-6">
        <div class="mx-auto block">
          <button class=" btn bg-base-200   lg:min-w-max"
            >
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="currentColor"   viewBox="0 0 16 16">
              <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
              <path d="M4 8a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 4 8z"/>
            </svg>
            <span class="m-2 text-md"> <a href="/post/dashboard">Dashboard</a></span>
          </button>
        </div>
        <div class="mx-auto block">
          <button class=" btn bg-base-200   lg:min-w-max"
            >
            <svg xmlns="http://www.w3.org/2000/svg" class="bi bi-pencil w-6 h-6" fill="currentColor"   viewBox="0 0 16 16">
              <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
            </svg>
            <span class="m-2 text-md"><a href='/editButton'>Edit Profile</a></span>
          </button>
        </div>
      </div>


    </div>
  </div>
</div>
<%- include('partials/footer-postauth') %>