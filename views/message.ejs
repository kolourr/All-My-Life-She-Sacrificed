<%if (typeof user === 'undefined') { %> <%- include('partials/header-preauth')
%> <% } else { %> <%- include('partials/header-postauth') %> <% } %>
<div class="grow  -mt-20 sm:mt-0	 ">
    <div class="grid grid-cols-8 gap-4">
        <div class="col-span-8 sm:col-start-2 sm:col-end-8 lg:col-start-3 lg:col-end-7 card bg-base-300 rounded-box place-items-center p-8">
            <h1 class="text-2xl text-center font-bold m-4">Contact Us</h1>
            <div class="sendmessage">
                <form id="contact-us" action="/sendmessage" method="POST">
                    <input class="input input-bordered input-primary w-full mb-4" type="text" name="name"
                        placeholder="Name" required /><br /><br />
                    <input type="email" class="input input-bordered input-primary w-full mb-4" placeholder="Email"
                        name="email" required /><br /><br />
                    <textarea class="textarea textarea-success m-4-mt-4" type="text" rows="8" cols="40"
                        placeholder="Message" name="message" id="caption" required></textarea>
                    <div class="col-md-6 p-4">
                        <button class="btn btn-primary btn-block uppercase text-xl">
                            Submit
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<%if (typeof user === 'undefined') { %> <%- include('partials/footer-preauth')
%> <% } else { %> <%- include('partials/footer-postauth') %> <% } %>